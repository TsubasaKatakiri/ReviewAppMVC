@model ReviewAppMVC2.BLL.VMs.CommentVM.CommentCreate

@{
    ViewData["Title"] = "Write comment";
}

<h1>Write comment</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Comment" asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value=@Guid.NewGuid() asp-for="UserId" class="control-label" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ReviewId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Username" value=@User.Identity.Name class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProductId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button asp-controller="Comment" asp-action="CreateComment" asp-route-id="@Model.ProductId" type="submit" class="btn btn-primary">Create comment</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-controller="Product" asp-action="GetProductById" asp-route-id="@Model.ProductId">Back</a>
</div>